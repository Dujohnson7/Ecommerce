<script>
    function openModal(modalId) {
        const modal = document.getElementById(modalId);
        if (modal) {
            modal.classList.remove('hidden');
        }
    }

    function closeModal(modalId) {
        const modal = document.getElementById(modalId);
        if (modal) {
            modal.classList.add('hidden');
        }
    }

    document.addEventListener('DOMContentLoaded', function () {
        lucide.createIcons();

        const provinceSelect = document.getElementById('provinceState');
        const districtSelect = document.getElementById('districtState');

        if (provinceSelect && districtSelect) {
            // Load districts for the selected province on page load (for update case)
            const selectedProvince = provinceSelect.value;
            if (selectedProvince) {
                fetch(`/users/districts-by-province?province=${selectedProvince}`)
                    .then(response => response.json())
                    .then(data => {
                        districtSelect.options.length = 1; // Clear current options except placeholder
                        data.forEach(district => {
                            const option = document.createElement('option');
                            option.value = district;
                            option.textContent = district;
                            if (districtSelect.dataset.selected == district) {
                                option.selected = true;
                            }
                            districtSelect.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Error loading districts:', error));
            }

            // Dynamic district loading on province change
            provinceSelect.addEventListener('change', function () {
                const selectedProvince = this.value;
                districtSelect.options.length = 1; // Clear current options except placeholder

                if (!selectedProvince) return;

                fetch(`/users/districts-by-province?province=${selectedProvince}`)
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(district => {
                            const option = document.createElement('option');
                            option.value = district;
                            option.textContent = district;
                            districtSelect.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Error loading districts:', error));
            });
        }
    });
</script>
